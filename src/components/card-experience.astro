---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  position: string;
  time: string;
  href?: string;
  image?: ImageMetadata;
}

const { title, position, time, href, image } = Astro.props;
---

<div class="bg-gray-100 p-4 rounded-lg flex flex-row gap-2">
  <div class="flex flex-col">
    <h3 class="text-xl font-medium">{title}</h3>
    <p class="text-gray-600 mb-2">
      {
        href ? (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="content-link"
          >
            {position}
          </a>
        ) : (
          position
        )
      }
      | {time}
    </p>

    <article class="prose min-w-full">
      <slot />
    </article>
  </div>
  {
    image ? (
      <Image
        src={image}
        alt={position}
        class="rounded-lg aspect-auto object-cover w-1/3"
      />
    ) : null
  }
</div>
