---
import Layout from '../layouts/Layout.astro';
import LucideIcon from "../components/Lucide.astro";
import CardExperience from '../components/card-experience.astro';

import { Mail, Phone, Github, Linkedin, User, Star, Code, Coffee, Lightbulb } from "lucide"

//import Image from "next/image"

---

<Layout title="Welcome to Astro.">
	      {/* Main content */}
				<main class="flex flex-col md:flex-row">
					{/* Left Column - Inverted style */}
					<div class="md:w-1/3 bg-gray-800 text-white p-8 space-y-8">
						{/* Image section */}
						<div class="aspect-w-16 aspect-h-9 bg-white rounded-lg overflow-hidden">
							<img
								src="/rockies.jpg"
								alt="Stefan"
								class="object-cover"
							/>
						</div>
	
						{/* Personal Information */}
						<section>
							<h2 class="text-2xl font-semibold mb-4 text-gray-300">Personal Info</h2>
							<div class="space-y-2">
								<div class="flex items-center">
									<LucideIcon icon={User} class="w-5 h-5 mr-2 text-gray-400" />
									<span>Full Stack Developer</span>
								</div>
								<div class="flex items-center">
									<LucideIcon icon={Mail} class="w-5 h-5 mr-2 text-gray-400" />
									<span>john.doe@email.com</span>
								</div>
								<div class="flex items-center">
									<LucideIcon icon={Phone} class="w-5 h-5 mr-2 text-gray-400" />
									<span>(123) 456-7890</span>
								</div>
							</div>
						</section>
	
						{/* Stations */}
						<section>
							<h2 class="text-2xl font-semibold mb-4 text-gray-300">Stations</h2>
							<div class="space-y-4">
								<div class="flex items-center space-x-4">
									<div class="w-12 h-12 bg-white rounded-full overflow-hidden">
										<img
											src="/placeholder.svg?height=48&width=48"
											alt="TechCorp Inc. logo"
											width={48}
											height={48}
											class="object-cover"
										/>
									</div>
									<div>
										<h3 class="font-medium">TechCorp Inc.</h3>
										<p class="text-sm text-gray-400">June 2021 - Present</p>
									</div>
								</div>
								<div class="flex items-center space-x-4">
									<div class="w-12 h-12 bg-white rounded-full overflow-hidden">
										<img
											src="/placeholder.svg?height=48&width=48"
											alt="WebSolutions LLC logo"
											width={48}
											height={48}
											class="object-cover"
										/>
									</div>
									<div>
										<h3 class="font-medium">WebSolutions LLC</h3>
										<p class="text-sm text-gray-400">August 2020 - May 2021</p>
									</div>
								</div>
							</div>
						</section>
	
						{/* Skills */}
						<section>
							<h2 class="text-2xl font-semibold mb-4 text-gray-300">Skills</h2>
							<div class="flex flex-wrap gap-2">
								{["JavaScript", "React.js", "Node.js", "Python", "SQL", "Git", "RESTful APIs", "Agile"].map((skill) => (
									<span key={skill} class="bg-gray-700 text-gray-200 px-3 py-1 rounded-full text-sm">
										{skill}
									</span>
								))}
							</div>
						</section>
	
						{/* Education */}
						<section>
							<h2 class="text-2xl font-semibold mb-4 text-gray-300">Education</h2>
							<div class="bg-gray-700 p-4 rounded-lg">
								<h3 class="text-lg font-medium text-gray-200">Bachelor of Science in Computer Science</h3>
								<p class="text-gray-400">University of Technology</p>
								<p class="text-gray-400">Graduated: May 2020</p>
							</div>
						</section>
					</div>
	
					{/* Right Column */}
					<div class="md:w-2/3 bg-white p-8 space-y-8">
						{/* Work Experience */}
						<section>
							<h2 class="text-2xl font-semibold mb-4">Work Experience</h2>
							<div class="space-y-6">
								<CardExperience title="Lead Web3 Developer" position="Molecule AG | Oct 2022 - now">
									<ul class="list-disc list-inside space-y-1">
										<li>Led a team of 5 developers in creating a high-performance web application</li>
										<li>Implemented microservices architecture, improving system scalability by 40%</li>
										<li>Mentored junior developers and conducted code reviews</li>
									</ul>
								</CardExperience>
								<div class="bg-gray-100 p-4 rounded-lg">
									<h3 class="text-xl font-medium">Senior Developer</h3>
									<p class="text-gray-600 mb-2">TechCorp Inc. | June 2021 - Present</p>
									<ul class="list-disc list-inside space-y-1">
										<li>Led a team of 5 developers in creating a high-performance web application</li>
										<li>Implemented microservices architecture, improving system scalability by 40%</li>
										<li>Mentored junior developers and conducted code reviews</li>
									</ul>
								</div>
								<div class="bg-gray-100 p-4 rounded-lg">
									<h3 class="text-xl font-medium">Full Stack Developer</h3>
									<p class="text-gray-600 mb-2">WebSolutions LLC | August 2020 - May 2021</p>
									<ul class="list-disc list-inside space-y-1">
										<li>Developed and maintained multiple client websites using React and Node.js</li>
										<li>Optimized database queries, reducing load times by 30%</li>
										<li>Collaborated with UX designers to implement responsive designs</li>
									</ul>
								</div>
							</div>
						</section>
	
						{/* Projects */}
						<section>
							<h2 class="text-2xl font-semibold mb-4">Projects</h2>
							<div class="space-y-6">
								<div class="bg-gray-100 p-4 rounded-lg">
									<h3 class="text-xl font-medium">E-commerce Platform</h3>
									<p class="text-gray-600 mb-2">Personal Project</p>
									<ul class="list-disc list-inside space-y-1">
										<li>Built a full-stack e-commerce platform using MERN stack</li>
										<li>Implemented secure payment processing with Stripe</li>
										<li>Deployed on AWS using Docker containers</li>
									</ul>
								</div>
								<div class="bg-gray-100 p-4 rounded-lg">
									<h3 class="text-xl font-medium">Task Management App</h3>
									<p class="text-gray-600 mb-2">Open Source Contribution</p>
									<ul class="list-disc list-inside space-y-1">
										<li>Contributed to an open-source task management application</li>
										<li>Implemented drag-and-drop functionality for task prioritization</li>
										<li>Added real-time collaboration features using WebSockets</li>
									</ul>
								</div>
							</div>
						</section>
	
						{/* Detailed Skills Explanation */}
						<section>
							<h2 class="text-2xl font-semibold mb-4">Skills in Depth</h2>
							<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
								{[
									{
										name: "JavaScript (ES6+)",
										experience: "7 years",
										rating: 5,
										description: "Proficient in modern JavaScript, including async/await, destructuring, and modules. Experienced with functional programming concepts and closures."
									},
									{
										name: "React.js",
										experience: "5 years",
										rating: 5,
										description: "Extensive experience building complex UIs with React, including state management with Redux and Context API. Familiar with hooks and custom hook creation."
									},
									{
										name: "Node.js",
										experience: "4 years",
										rating: 4,
										description: "Strong backend development skills using Express.js. Experienced in building RESTful APIs, handling authentication, and integrating with databases."
									},
									{
										name: "Python",
										experience: "3 years",
										rating: 3,
										description: "Proficient in Python for data analysis and scripting. Familiar with libraries such as Pandas and NumPy for data manipulation and analysis."
									},
									{
										name: "SQL",
										experience: "6 years",
										rating: 4,
										description: "Experienced in writing complex queries, optimizing database performance, and working with both relational (PostgreSQL, MySQL) and NoSQL (MongoDB) databases."
									},
									{
										name: "Git",
										experience: "7 years",
										rating: 5,
										description: "Advanced knowledge of version control using Git, including branching strategies, rebasing, and resolving merge conflicts."
									},
									{
										name: "RESTful APIs",
										experience: "5 years",
										rating: 4,
										description: "Skilled in designing and implementing RESTful APIs, with a focus on best practices for security, performance, and scalability."
									},
									{
										name: "Agile Methodologies",
										experience: "4 years",
										rating: 4,
										description: "Experienced in working with Scrum and Kanban methodologies, including sprint planning, daily stand-ups, and retrospectives."
									}
								].map((skill, index) => (
									<div key={index} class="bg-gray-100 p-4 rounded-lg">
										<h3 class="text-lg font-semibold">{skill.name}</h3>
										<p class="text-sm text-gray-600 mb-2">{skill.experience} of professional experience</p>
										<div class="flex mb-2" aria-label={`Skill level: ${skill.rating} out of 5 stars`}>
											{[...Array(5)].map((_, i) => (
												<LucideIcon icon={Star} key={i} className={`w-4 h-4 ${i < skill.rating ? 'text-yellow-400' : 'text-gray-300'}`} fill={i < skill.rating ? 'currentColor' : 'none'} />
											))}
										</div>
										<p class="text-sm">{skill.description}</p>
									</div>
								))}
							</div>
						</section>
					</div>
				</main>
</Layout>

